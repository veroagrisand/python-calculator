def calculator():
  # Meminta input dari user
  num1 = float(input("Masukkan angka pertama: "))
  operator = input("Masukkan operator (+, -, *, /): ")
  num2 = float(input("Masukkan angka kedua: "))

  # Menghitung sesuai dengan operator yang dipilih
  if operator == "+":
    result = num1 + num2
  elif operator == "-":
    result = num1 - num2
  elif operator == "*":
    result = num1 * num2
  elif operator == "/":
    result = num1 / num2
  else:
    result = "Operator tidak valid"

  # Menampilkan hasil
  print(result)

# Memanggil fungsi calculator
calculator()
